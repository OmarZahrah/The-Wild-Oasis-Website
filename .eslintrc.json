{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    "no-unused-vars": "warn", // for JS files
    "@typescript-eslint/no-unused-vars": "warn" // for TS files
  },
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "rules": {
        "@typescript-eslint/no-unused-vars": [
          "warn"
        ]
      }
    }
  ]
}